# Task Manager Environment Configuration
# Copy this file to .env and fill in your values

# Git SSH Key Configuration
# Path to your SSH private key for Git operations (optional)
# Leave empty to use default SSH key (~/.ssh/id_rsa or ~/.ssh/id_ed25519)
GIT_SSH_KEY_PATH=

# Example: GIT_SSH_KEY_PATH=~/.ssh/id_rsa
# Example: GIT_SSH_KEY_PATH=~/.ssh/id_ed25519

# Tasks Repository Configuration (configured via UI setup wizard)
# These are managed by the application, but can be set here for advanced use
# TASKS_REPO_PATH=~/claude-tasks
# TASKS_REPO_REMOTE=git@github.com:YOUR_USERNAME/your-tasks-repo.git

# Sync Configuration
# AUTO_SYNC_ENABLED=true
# AUTO_SYNC_INTERVAL_MINUTES=120
# SYNC_ON_STARTUP=true
# AUTO_PUSH_ON_CHANGE=true

# Server Configuration
# FLASK_PORT=5555
# FLASK_HOST=0.0.0.0
# FLASK_DEBUG=true
